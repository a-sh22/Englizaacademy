<script>
// سنة الفوتر
document.getElementById('year').textContent = new Date().getFullYear();

// تبديل اللغة والاتجاه
const htmlEl=document.documentElement, bodyEl=document.body,
      btnAr=document.getElementById('btn-ar'), btnEn=document.getElementById('btn-en');
function setLang(l){if(l==='en'){bodyEl.setAttribute('data-lang','en');htmlEl.lang='en';htmlEl.dir='ltr';btnEn.classList.add('active');btnAr.classList.remove('active');}
else{bodyEl.setAttribute('data-lang','ar');htmlEl.lang='ar';htmlEl.dir='rtl';btnAr.classList.add('active');btnEn.classList.remove('active');}
try{localStorage.setItem('site-lang',l);}catch(e){}}
btnAr.onclick=()=>setLang('ar'); btnEn.onclick=()=>setLang('en'); try{const s=localStorage.getItem('site-lang'); if(s) setLang(s);}catch(e){}

// Paddle (بياناتك)
Paddle.Setup({ vendor: 243729 });
document.getElementById('paddle-checkout').addEventListener('click',function(e){
  e.preventDefault();
  Paddle.Checkout.open({ product:'pro_01k2vd4n1w9h2bfawn5y2t3zrm' });
});
</script>
